{% extends "layouts/main.njk" %}
{% block content %}
    <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Welcome to the Privacy-First WaaS on Aztec</h2>
    <div class="mb-8">
        <p class="text-gray-600 text-center">Private, secure, and seamless cloud access to the world of cryptocurrencies through
            passkeys</p>
    </div>
    <div class="space-y-4">
        <button
            hx-get="/create-wallet"
            hx-target="#content"
            hx-swap="innerHTML"
            class="w-full bg-gradient-to-br from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700 text-white
                font-bold py-3 px-4 rounded-full transition duration-300 ease-in-out transform hover:-translate-y-1">
            Create New Wallet
        </button>
        <button
            hx-get="/import-wallet"
            hx-target="#content"
            hx-swap="innerHTML"
            class="w-full bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded-full transition duration-300 ease-in-out
                transform hover:-translate-y-1">
            Login to Existing Wallet with Passkey
        </button>
    </div>
    <div class="mt-8 text-center">
        <a href="#" class="text-sm text-purple-600 hover:text-purple-800">Learn more about Vora Wallet</a>
    </div>
{% endblock %}
