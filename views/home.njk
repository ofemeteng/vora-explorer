<div
    class="gradient-bg rounded-lg shadow-md overflow-hidden mb-6 text-white">
    <!-- Copyable Address Section -->
    <div class="p-6">
        <div class="mb-6">
            <h3 class="text-sm font-semibold mb-2">Your Address</h3>
            <!-- Toast Notification -->
            <div
                id="toast"
                class="fixed top-48 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white px-4 py-2 rounded-md shadow-lg hidden
                    z-50">
                Address copied to clipboard!
            </div>
            <div class="flex items-center justify-between bg-white/20 rounded p-2">
                <span class="text-sm truncate" id="wallet-address">{{ address }}</span>
                <button onclick="copyAddress()" class="text-white hover:text-gray-200 focus:outline-none" aria-label="Copy address">
                    <i data-lucide="copy" class="w-5 h-5"></i>
                </button>
            </div>
        </div>
        <!-- Balance Display -->
        <h2 class="text-xl font-semibold mb-2">Public ETH Balance</h2>
        <p class="text-4xl font-bold mb-4">{{ public_eth_balance }} ETH</p>
    </div>
</div>
<!-- Action Buttons -->
<div class="flex justify-between mb-6">
    <button
        hx-get="/send"
        hx-target="#main-content"
        hx-swap="innerHTML"
        class="bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded-lg flex flex-col items-center justify-center
            transition duration-300 ease-in-out flex-1 mx-1">
        <i data-lucide="send" class="w-6 h-6 mb-2"></i>
        Send
    </button>
    <button
        hx-get="/receive"
        hx-target="#main-content"
        hx-swap="innerHTML"
        class="bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded-lg flex flex-col items-center justify-center
            transition duration-300 ease-in-out flex-1 mx-1">
        <i data-lucide="download" class="w-6 h-6 mb-2"></i>
        Receive
    </button>
    <button class="bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded-lg flex flex-col items-center justify-center
            transition duration-300 ease-in-out flex-1 mx-1 relative group">
        <i data-lucide="arrow-left-right" class="w-6 h-6 mb-2"></i>
        Bridge
        <span class="absolute top-full left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs py-1 px-2 rounded opacity-0
            group-hover:opacity-100 transition-opacity duration-300 mt-2">
        Coming Soon</span>
    </button>
</div>
<!-- Asset List -->
<div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Your Assets</h2>
    <ul class="space-y-4">
        <li class="flex justify-between items-center">
            <div class="flex items-center">
                <img src="/images/eth.svg?height=40&width=40" alt="ETH" class="w-10 h-10 rounded-full mr-3">
                <div>
                    <p class="font-medium text-gray-800">Ethereum</p>
                    <p class="text-sm text-gray-500">ETH</p>
                </div>
            </div>
            <div class="text-right">
                <p class="font-medium text-gray-800">{{ public_eth_balance }} ETH</p>
            </div>
        </li>
    </ul>
</div>
<button
    hx-get="/mint-eth-public"
    hx-target="#main-content"
    hx-swap="innerHTML"
    class="w-full bg-black hover:bg-gray-800 text-white font-bold py-4 px-6 rounded-lg mt-6 transition duration-300
        ease-in-out flex items-center justify-center">
    <i data-lucide="droplet" class="w-5 h-5 mr-2"></i>
    Mint ETH from Faucet
</button>
<script>
    lucide.createIcons();
</script>