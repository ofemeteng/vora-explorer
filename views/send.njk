<div id="content" class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-700 mb-6">Send Funds Publicly</h2>
    <form hx-post="/send-funds" hx-target="#content" hx-swap="outerHTML">
        <div class="mb-4">
            <label for="asset" class="block text-sm font-medium text-gray-700 mb-2">Select Asset</label>
            <select id="asset" name="asset" class="w-full p-2 bg-gray-100 border border-gray-300 rounded-lg">
                <option value="ETH">Ethereum (ETH)</option>
            </select>
        </div>
        <div class="mb-4">
            <label for="recipient" class="block text-sm font-medium text-gray-700 mb-2">Recipient Address</label>
            <input
                type="text"
                id="recipient"
                name="recipient"
                placeholder="Enter recipient's address"
                class="w-full p-2 bg-gray-100 border border-gray-300 rounded-lg">
        </div>
        <div class="mb-6">
            <label for="amount" class="block text-sm font-medium text-gray-700 mb-2">Amount</label>
            <div class="relative">
                <input
                    type="number"
                    id="amount"
                    name="amount"
                    placeholder="0.00"
                    step="0.000000000000000001"
                    min="0"
                    class="w-full p-2 bg-gray-100 border border-gray-300 rounded-lg pr-12">
                <span class="absolute right-3 top-2 text-gray-500" id="asset-symbol">ETH</span>
            </div>
        </div>
        <div class="flex justify-between">
            <button
                type="button"
                class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-full flex-1 mr-2"
                hx-get="/home"
                hx-target="#content"
                hx-swap="outerHTML">
                Cancel
            </button>
            <button
                type="submit"
                class="bg-gradient-to-br from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700 text-white font-bold
                    py-2 px-4 rounded-full flex-1 ml-2">
                Send
            </button>
        </div>
    </form>
</div>